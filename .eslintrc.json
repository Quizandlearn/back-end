{
    "env": {
        "browser": true,
        "es2021": true,
        "mocha": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:chai-friendly/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "chai-friendly"
    ],
    "rules": {
        "no-underscore-dangle": [1, { "allowAfterThis": true }]
    }
}
